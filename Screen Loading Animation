-- Sky-Base-Maker Loading Animation Script for Roblox
-- Phong c√°ch MOONDIETY ‚ú® v·ªõi hi·ªáu ·ª©ng n·ªÅn xuy√™n su·ªët 0.3 + logo + text animation

local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- GUI container
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SkyBaseLoadingGui"
screenGui.Parent = playerGui
screenGui.ResetOnSpawn = false
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- üåå Background = logo tile l·∫∑p l·∫°i xuy√™n su·ªët (transparency 0.3)
local backgroundFrame = Instance.new("ImageLabel")
backgroundFrame.Name = "Background"
backgroundFrame.Size = UDim2.new(1, 0, 1, 0)
backgroundFrame.BackgroundTransparency = 1
backgroundFrame.Image = "rbxassetid://125022786287705" -- ‚ö° thay b·∫±ng ID logo b·∫°n g·ª≠i sau
backgroundFrame.ImageTransparency = 0.3
backgroundFrame.ScaleType = Enum.ScaleType.Tile
backgroundFrame.TileSize = UDim2.new(0, 200, 0, 200)
backgroundFrame.Parent = screenGui

-- Container ch√≠nh gi·ªØa
local centerFrame = Instance.new("Frame")
centerFrame.Size = UDim2.new(0, 500, 0, 400)
centerFrame.Position = UDim2.new(0.5, -250, 0.5, -200)
centerFrame.BackgroundTransparency = 1
centerFrame.Parent = screenGui

-- ‚òÅÔ∏è Logo ch√≠nh 70x70
local cloudLogo = Instance.new("ImageLabel")
cloudLogo.Name = "CloudLogo"
cloudLogo.Size = UDim2.new(0, 70, 0, 70)
cloudLogo.Position = UDim2.new(0.5, -35, 0, 40)
cloudLogo.BackgroundTransparency = 1
cloudLogo.Image = "rbxassetid://125022786287705" -- ‚ö° thay b·∫±ng ID logo b·∫°n g·ª≠i sau
cloudLogo.ScaleType = Enum.ScaleType.Fit
cloudLogo.Parent = centerFrame

-- ‚úçÔ∏è Text SKY-BASE-MAKER (chia ch·ªØ)
local textContainer = Instance.new("Frame")
textContainer.Size = UDim2.new(0, 480, 0, 80)
textContainer.Position = UDim2.new(0.5, -240, 0, 180)
textContainer.BackgroundTransparency = 1
textContainer.Parent = centerFrame

local textParts = {"S","K","Y","-","B","A","S","E","-","M","A","K","E","R"}
local letters = {}
local spacing = 34

for i, char in ipairs(textParts) do
    if char ~= "-" then
        local letter = Instance.new("TextLabel")
        letter.Size = UDim2.new(0, 40, 1, 0)
        letter.Position = UDim2.new(0, (i-1)*spacing - 600, 0, 0) -- xu·∫•t hi·ªán t·ª´ tr√°i
        letter.BackgroundTransparency = 1
        letter.Text = char
        letter.Font = Enum.Font.LuckiestGuy
        letter.TextSize = 35
        letter.TextTransparency = 1
        letter.Parent = textContainer

        -- Gradient m√†u ch·ªØ
        local letterGradient = Instance.new("UIGradient")
        letterGradient.Color = ColorSequence.new{
            ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 255, 255)),
            ColorSequenceKeypoint.new(0.25, Color3.fromRGB(64, 150, 255)),
            ColorSequenceKeypoint.new(0.5, Color3.fromRGB(138, 43, 226)),
            ColorSequenceKeypoint.new(0.75, Color3.fromRGB(255, 20, 147)),
            ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 165, 0))
        }
        letterGradient.Rotation = 45
        letterGradient.Parent = letter

        table.insert(letters, {element = letter, finalPos = (i-1)*spacing})
    else
        local dash = Instance.new("Frame")
        dash.Size = UDim2.new(0, 28, 0, 5)
        dash.Position = UDim2.new(0, (i-1)*spacing + 6 - 600, 0.5, -2)
        dash.BackgroundColor3 = Color3.fromRGB(0, 255, 255)
        dash.BorderSizePixel = 0
        dash.Parent = textContainer

        table.insert(letters, {element = dash, finalPos = (i-1)*spacing + 6})
    end
end

-- ‚ö° Animation sequence
local function startAnimation()
    -- Logo xu·∫•t hi·ªán
    cloudLogo.Size = UDim2.new(0, 0, 0, 0)
    cloudLogo.ImageTransparency = 1
    TweenService:Create(cloudLogo, TweenInfo.new(1, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
        Size = UDim2.new(0, 70, 0, 70),
        ImageTransparency = 0
    }):Play()

    task.wait(1)

    -- Ch·ªØ l·∫ßn l∆∞·ª£t bay v√†o
    local delayPerLetter = 0.15
    for i, data in ipairs(letters) do
        local letter = data.element
        local tween
        if letter:IsA("TextLabel") then
            tween = TweenService:Create(letter, TweenInfo.new(0.6, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
                Position = UDim2.new(0, data.finalPos, 0, 0),
                TextTransparency = 0
            })
        else
            tween = TweenService:Create(letter, TweenInfo.new(0.6, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
                Position = UDim2.new(0, data.finalPos, 0.5, -2),
                BackgroundTransparency = 0
            })
        end
        tween:Play()
        task.wait(delayPerLetter)
    end

    task.wait(1.5)

    -- Ch·ªØ l·∫ßn l∆∞·ª£t bi·∫øn m·∫•t sang ph·∫£i
    local disappearDelay = 0.1
    for i, data in ipairs(letters) do
        local letter = data.element
        local tween
        if letter:IsA("TextLabel") then
            tween = TweenService:Create(letter, TweenInfo.new(0.6, Enum.EasingStyle.Back, Enum.EasingDirection.In), {
                Position = UDim2.new(0, data.finalPos + 800, 0, -30),
                TextTransparency = 1,
                Size = UDim2.new(0, 20, 1, 0)
            })
        else
            tween = TweenService:Create(letter, TweenInfo.new(0.6, Enum.EasingStyle.Back, Enum.EasingDirection.In), {
                Position = UDim2.new(0, data.finalPos + 800, 0.5, -2),
                BackgroundTransparency = 1,
                Size = UDim2.new(0, 14, 0, 2)
            })
        end
        tween:Play()
        task.wait(disappearDelay)
    end

    -- Logo bi·∫øn m·∫•t
    TweenService:Create(cloudLogo, TweenInfo.new(0.8, Enum.EasingStyle.Back, Enum.EasingDirection.In), {
        Size = UDim2.new(0, 0, 0, 0),
        ImageTransparency = 1,
        Position = cloudLogo.Position + UDim2.new(0, 0, 0, -50)
    }):Play()

    -- Xo√° GUI sau animation
    task.wait(1)
    screenGui:Destroy()
end

startAnimation()
