-- üõ†Ô∏è Service
local TweenService = game:GetService("TweenService")

-- üéØ T·∫°o ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "CustomUI"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- üé® N·ªÄN CH√çNH (Gradient ƒë·ªông)
local backgroundFrame = Instance.new("Frame")
backgroundFrame.Name = "Background"
backgroundFrame.Size = UDim2.new(1, 0, 1, 0)
backgroundFrame.BackgroundTransparency = 0
backgroundFrame.BorderSizePixel = 0
backgroundFrame.Parent = screenGui

local backgroundGradient = Instance.new("UIGradient")
backgroundGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 255, 255)),
    ColorSequenceKeypoint.new(0.2, Color3.fromRGB(64, 150, 255)),
    ColorSequenceKeypoint.new(0.5, Color3.fromRGB(138, 43, 226)),
    ColorSequenceKeypoint.new(0.8, Color3.fromRGB(255, 20, 147)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 100, 0))
}
backgroundGradient.Rotation = 45
backgroundGradient.Parent = backgroundFrame

-- üî• LOGO (70x70, center screen)
local logo = Instance.new("ImageLabel")
logo.Name = "Logo"
logo.Size = UDim2.new(0, 70, 0, 70) -- ch·ªânh v·ªÅ 70x70
logo.Position = UDim2.new(0.5, -35, 0.4, -35) -- cƒÉn gi·ªØa
logo.BackgroundTransparency = 1
logo.Image = "rbxassetid://<your_logo_id_here>" -- ƒë·ªïi ID logo ·ªü ƒë√¢y
logo.Parent = screenGui

-- ‚úçÔ∏è TEXT LABEL (gi·ªØ nguy√™n hi·ªáu ·ª©ng)
local textLabel = Instance.new("TextLabel")
textLabel.Name = "CustomText"
textLabel.Size = UDim2.new(1, 0, 0, 50)
textLabel.Position = UDim2.new(0, 0, 0.65, 0)
textLabel.BackgroundTransparency = 1
textLabel.Text = "Hello Roblox!"
textLabel.Font = Enum.Font.GothamBold
textLabel.TextSize = 32
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
textLabel.Parent = screenGui

-- üåà Gradient cho ch·ªØ
local textGradient = Instance.new("UIGradient")
textGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 0, 0)),
    ColorSequenceKeypoint.new(0.5, Color3.fromRGB(0, 255, 0)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 0, 255))
}
textGradient.Rotation = 0
textGradient.Parent = textLabel

-- ‚ú® Hi·ªáu ·ª©ng Animate
local function animate()
    -- Gradient n·ªÅn xoay v√≤ng
    local bgTween = TweenService:Create(backgroundGradient, TweenInfo.new(8, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1), {
        Rotation = backgroundGradient.Rotation + 360
    })
    bgTween:Play()

    -- Gradient ch·ªØ chuy·ªÉn ƒë·ªông
    local textTween = TweenService:Create(textGradient, TweenInfo.new(4, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1), {
        Rotation = 360
    })
    textTween:Play()

    -- Logo glow nh·∫π
    local logoTween = TweenService:Create(logo, TweenInfo.new(2, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut, -1, true), {
        ImageTransparency = 0.2
    })
    logoTween:Play()
end

animate()
